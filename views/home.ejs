<%- include('./base/header.ejs') %>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(45deg, #1e90ff, #ff0080);
        }
        .login-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            min-height: 100vh;
            padding: 0 50px;
        }
        .login-form {
            background-color: white;
            border-radius: 25px;
            padding: 40px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 45%;
        }
        .login-form h1 {
            font-size: 36px;
            margin-bottom: 20px;
            font-weight: bold;
        }
        .login-form .form-control {
            background-color: #e6f0f8;
            border: none;
            padding: 15px;
            margin-bottom: 15px;
            position: relative;
        }
        .login-form .btn-primary {
            width: 100%;
            padding: 15px;
            background-color: #f59bcd;
            border: none;
            font-size: 16px;
        }
        .login-form .social-login {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
        .login-form .social-login img {
            width: 45px;
            height: 45px;
        }
        .image-container {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50%;
        }
        .image-container img {
            width: 800px;
        }
        .toggle-password {
            position: absolute;
            top: 50%;
            right: 15px;
            transform: translateY(-50%);
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="login-form">
            <h1>Log In</h1>
            <p>Welcome back !!!</p>
            <form action="/login" method="post" >
                <div class="mb-3">
                    
                    <input type="email" name="email" id="email" class="form-control" placeholder="Email" required>
                </div>
                <div class="mb-3 position-relative">
                    <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                    <span class="toggle-password" onclick="togglePasswordVisibility()">
                        üëÅÔ∏è
                    </span>
                    <a href="/forgetpassword" class="position-absolute" style="top: 50%; right: 15px; transform: translateY(-50%); margin-right: 35px;">Forgot Password?</a>
                </div>
                <button type="submit" class="btn btn-primary">LOGIN</button>
            </form>

            <div class="text-center mt-4">
                Don't have an account yet? <a href="/signup">Sign up for free</a>
            </div>
        </div>

        <div class="image-container">
            <!-- logo image here -->
            <img src="https://imagizer.imageshack.com/v2/1024x768q70/924/jblVrV.png" alt="My Image" />
        </div>
    </div>

 <%- include('./base/footer.ejs') %>

 <script>
     function togglePasswordVisibility() {
         const passwordField = document.getElementById('password');
         const eyeIcon = document.querySelector('.toggle-password');
         if (passwordField.type === 'password') {
             passwordField.type = 'text';
             eyeIcon.textContent = 'üôà'; // Change to hide icon
         } else {
             passwordField.type = 'password';
             eyeIcon.textContent = 'üëÅÔ∏è'; // Change to show icon
         }
     }
 </script>
